@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
	::-moz-selection {
		@apply bg-indigo-100;
	}
	::selection {
		@apply bg-indigo-100;
	}
	*:focus,
	button:focus {
		@apply outline-none ring-2 ring-indigo-300;
	}
	h1 {
		@apply text-2xl font-light;
	}
	p {
		@apply leading-relaxed;
	}
}
@layer components {
}
